@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
.ig
  path.chord
    fill-opacity 0.3
    stroke-opacity 1
    &:hover
      fill-opacity 0.9
  text
    font-size 1.1em
    &.BG
      font-size 0.9em
    &.CY
    &.LV
    &.LT
    &.LU
    &.HU
    &.RO
    &.SI
    &.EL
      font-size 0.9em
    &.MT
      font-size 0.7em
    &.CZ
      font-weight bold

  .title-area
    padding-left 30px
    h2
      font-weight normal
    .selector
      .box
        input
          display none
        label
          display block
          float left
          border 1px solid ColorBlue
          padding 4px 10px
          &:hover
            cursor pointer
        &:not(:first-child) label
          border-left 0px none
        input:checked + label
          background ColorBlue
          box-shadow ColorBlue 0px 0px 3px
          color #FFF
        &:first-child label
          border-top-left-radius 3px
          border-bottom-left-radius 3px
        &:last-child label
          border-top-right-radius 3px
          border-bottom-right-radius 3px

